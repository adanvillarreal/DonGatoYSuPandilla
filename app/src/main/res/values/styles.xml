<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AdminNavDrawerTheme" parent="AppTheme.NoActionBar">
        <item name="android:colorPrimary">@color/adminPrimaryColor</item>
        <item name="android:colorPrimaryDark">@color/adminPrimaryDarkColor</item>
        <item name="android:textColorPrimary">@color/adminPrimaryTextColor</item>
    </style>
    <style name="AdminNavDrawerHeader">
        <item name="android:colorPrimary">@color/adminPrimaryColor</item>
        <item name="android:colorPrimaryDark">@color/adminPrimaryDarkColor</item>
        <item name="android:textColorPrimary">@color/adminPrimaryTextColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="section_header" parent="AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="section_header_padding" parent="AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonStyleForDisable" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

</resources>
