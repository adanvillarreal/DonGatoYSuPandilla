<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".behavior.activities.ReservationActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estás a tan sólo unos pasos del viaje de tus sueños."
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_select_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuantas personas asistirán al viaje? (2)" />

        <SeekBar
            android:id="@+id/sb_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="15"
            android:progress="2"
            android:theme="@style/MyDatePickerDialogTheme" />

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu viaje ideal inicia el día..."
            android:layout_marginBottom="10dp"/>

        <DatePicker
            android:id="@+id/dp"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:calendarTextColor="@color/colorPrimary"
            android:theme="@style/MyDatePickerDialogTheme" />


        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_estimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_pre_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitar disponibilidad"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>