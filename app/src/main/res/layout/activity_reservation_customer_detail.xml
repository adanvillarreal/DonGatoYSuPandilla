<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/rescusdetail_header_text"
            style="@style/section_header"/>


        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_text"
            android:text="Tu paquete para ir a %1$s el %2$s estÃ¡ disponible."
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/next_steps_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_text"
            android:text="Lo que sigue es que pagues la cantidad acordada de $ %1$s a cualquiera de las siguientes cuentas bancarias."
            android:paddingTop="10dp"/>

        <ImageView
            android:id="@+id/example_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/next_steps_text"
            app:srcCompat="@drawable/rescusdetail_example"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/take_picture_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/example_image"
            android:text="@string/rescusdetail_take_picture_text"
            android:paddingTop="10dp"/>

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/take_picture_text"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/select_picture_button"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/rescusdetail_select_picture_button"/>

            <Button
                android:id="@+id/take_picture_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/rescusdetail_take_picture_button"/>
        </LinearLayout>

        <ImageView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="250dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttons_layout" />

        <Button
            android:id="@+id/upload_picture_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rescusdetail_upload_picture_button"
            android:layout_below="@+id/preview_image"/>
    </RelativeLayout>
</ScrollView>
